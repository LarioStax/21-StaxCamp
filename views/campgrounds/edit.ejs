<%- include("../partials/header")%>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1 class="mb-4">Edit <%=campground.name%></h1>
	</div>		
	<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">

		<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="inputName" class="sr-only">Name</label>
				<input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]" id="inputName" placeholder="Name" required>
			</div>
			<div class="form-group">
				<label for="inputPrice" class="sr-only">Price</label>
				<input required class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" id="inputPrice" placeholder="Price per night" min="0.00" step="0.01">
			</div>
			<div class="form-group">
				<label for="inputImg" class="sr-only">Img URL</label>
				<input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]"  id="inputImg" placeholder="Img URL">
			</div>

			<div class="form-group">
				<label for="inputDescription" class="sr-only">Comment</label>
				<textarea class="form-control" name="campground[description]" id="inputDescription" rows="4"><%=campground.description%></textarea>
			</div>

			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block" type="submit">Submit!</button>
			</div>
		</form>

		<a href="/campgrounds">Go Back!</a>
	</div>
</div>

<%- include("../partials/footer")%>	

