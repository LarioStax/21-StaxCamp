<%- include("../partials/header")%>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1 class="mb-4">Create a new campground</h1>
	</div>		
	<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">

		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="inputName" class="sr-only">Name</label>
				<input class="form-control" type="text" name="name" id="inputName" placeholder="Name" required>
			</div>
			<div class="form-group">
				<label for="inputPrice" class="sr-only">Price</label>
				<input required class="form-control" type="number" name="price" id="inputPrice" placeholder="Price per night" min="0.00" step="0.01">
			</div>
			<div class="form-group">
				<label for="inputImg" class="sr-only">Img URL</label>
				<input class="form-control" type="text" name="image" id="inputImg" placeholder="Img URL">
			</div>
			<div class="form-group">
				<label for="inputDescription" class="sr-only">Description</label>
				<textarea class="form-control" name="description" id="inputDescription" placeholder="Description" rows="4"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block" type="submit">Submit!</button>
			</div>
		</form>

		<a href="/campgrounds">Go Back!</a>
	</div>
</div>

<%- include("../partials/footer")%>	